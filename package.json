{
  "name": "chype",
  "version": "1.0.0",
  "description": "A Global chat Application which translate the chat into user's locale built using socket.io, express and MongoDb",
  "main": "index.js",
  "proxy": "http://localhost:3001/",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node index.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bhagatabhijeet/chype.git"
  },
  "keywords": [
    "Chat",
    "Translate",
    "Chat-Rooms",
    "Chat-App"
  ],
  "author": "Abhijeet, Setare, Son",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bhagatabhijeet/chype/issues"
  },
  "homepage": "https://github.com/bhagatabhijeet/chype#readme",
  "dependencies": {
    "@google-cloud/translate": "^6.0.4",
    "@sendgrid/mail": "^7.4.0",
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "google-translate": "^3.0.0",
    "http": "0.0.1-security",
    "if-env": "^1.0.4",
    "jwt-simple": "^0.5.6",
    "mailer": "^0.6.7",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.32",
    "mongoose": "^5.10.15",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "socket.io": "^3.0.3",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  }
}
